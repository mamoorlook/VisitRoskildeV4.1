<Page
    x:Name="pageRoot"
    x:Class="VisitRoslikde.View.DetailedPageR"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VisitRoslikde.View"
    xmlns:common="using:VisitRoslikde.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:VisitRoslikde.ViewModel"
    xmlns:controls="using:WinRTXamlToolkit.Controls"
    xmlns:maps="using:Bing.Maps"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="#FFFFD5BD">
        <Grid.DataContext>
            <viewModel:ListRestaurantsViewModel/>
        </Grid.DataContext>
        <Grid Margin="0,0,0,634" Background="#FFFF7F15">
            <Button x:Name="backButton" Margin="39,49,0,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock HorizontalAlignment="Left" Margin="114,49,0,0" TextWrapping="Wrap" Text="Visit" VerticalAlignment="Top" Style="{StaticResource SubheaderTextBlockStyle}" FontFamily="Segoe UI Light" Width = "71" FontSize="42"/>
            <TextBlock HorizontalAlignment="Left" Margin="190,49,0,0" TextWrapping="Wrap" Text="Roskilde" VerticalAlignment="Top" Style="{StaticResource HeaderTextBlockStyle}" FontFamily ="Advent Pro" Height="41" Width="230" FontSize="72"/>
            <TextBlock HorizontalAlignment="Left" Margin="190,227,0,-134" TextWrapping="Wrap" Text="{Binding ActualRestaurant.Name}" VerticalAlignment="Top" Style="{StaticResource HeaderTextBlockStyle}" FontFamily ="Advent Pro" Height="41" Width="541" FontSize="72" Foreground="#FFFF7F15"/>

        </Grid>
        <controls:ImageButton x:ConnectionId='1' x:Name="hotelsButton"
        	Content="HOTELS" 
        	HorizontalAlignment="Left"
        	Margin="0,135,0,0" 
        	VerticalAlignment="Top" 
        	Width="244" 
        	Height="56" 
        	Background="#FFFFD5BD" 
        	                          
        	FontFamily="Advent Pro" 
        	FontSize="25" 
        	Foreground="#FFFF7F15" 
        	HoverStateImageSource="ms-appx:///Assets/Backgrounds/BackgroundButton.jpg" 
        	Opacity="0.6"/>
        <controls:ImageButton x:ConnectionId='2' x:Name="restaurantsButton" 
        	Content="RESTAURANTS"
        	HorizontalAlignment="Left" 
        	Margin="245,135,0,0" 
        	VerticalAlignment="Top" 
        	Width="244" 
        	Height="56" 
        	Background="#FFFFD5BD" 
        	                               
        	FontFamily="Advent Pro" 
        	FontSize="25" 
        	Foreground="#FFFF7F15" 
        	HoverStateImageSource="ms-appx:///Assets/Backgrounds/BackgroundButton.jpg" 
        	Opacity="0.6"/>
        <maps:Map 
			    ZoomLevel="12.5"
			    Credentials="AljQJsKczEb9LXrvnFDnCdsY3iNlzkU3nkAovykCUTcYsnqgc7HLZ1FHa78cA-tr" Margin="1070,543,10,10">
            <maps:Map.Center>
                <maps:Location Latitude="55.6417438" Longitude="12.0833012" />
            </maps:Map.Center>

            <maps:Pushpin x:ConnectionId='3'                       >
                <maps:MapLayer.Position>
                    <maps:Location Latitude="55.6417438" Longitude="12.0833012" />
                </maps:MapLayer.Position>
            </maps:Pushpin>
        </maps:Map>
        <Grid Margin="2,543,296,10" Opacity="0.6" Background="#FFFF7F15">
            <TextBlock HorizontalAlignment="Left" Margin="43,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Telephone number:" FontSize="40" Height="43" Width="354" FontFamily="Advent Pro"/>
            <TextBlock HorizontalAlignment="Left" Margin="43,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Opening hours:" FontSize="40" Height="46" Width="274" FontFamily="Advent Pro"/>
            <TextBlock HorizontalAlignment="Left" Margin="43,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Address:" FontSize="40" Height="43" Width="170" FontFamily="Advent Pro"/>
            <TextBlock HorizontalAlignment="Left" Margin="43,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Cuisine:" FontSize="40" Height="43" Width="170" FontFamily="Advent Pro"/>
            <TextBlock HorizontalAlignment="Left" Margin="350,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" Text="{Binding ActualRestaurant.Address}" FontSize="40" Height="43" FontFamily="Advent Pro"/>
            <TextBlock HorizontalAlignment="Left" Margin="350,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" Text="{Binding ActualRestaurant.Cuisine}" FontSize="40" Height="43" FontFamily="Advent Pro"/>
            <TextBlock HorizontalAlignment="Left" Margin="350,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="505" Text="{Binding ActualRestaurant.OpeningHours}" FontSize="40" Height="43" FontFamily="Advent Pro"/>
            <TextBlock HorizontalAlignment="Left" Margin="350,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="425" Text="{Binding ActualRestaurant.TelephoneNumber}" FontSize="40" Height="43" FontFamily="Advent Pro"/>
        </Grid>
    </Grid>
</Page>

